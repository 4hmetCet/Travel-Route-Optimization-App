<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:text="Öncelik Durumunu Seçebilirsiniz"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/ratingBar_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="@+id/textView_priority"
        app:layout_constraintTop_toBottomOf="@+id/textView_priority" />


    <TextView
        android:id="@+id/textView_timeConstraints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Zaman Aralığı Seçebilirsiniz"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/ratingBar_priority"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar_priority" />

    <EditText
        android:id="@+id/editText_firstTime"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="En Erken"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textView_timeConstraints"
        app:layout_constraintTop_toBottomOf="@+id/textView_timeConstraints" />

    <EditText
        android:id="@+id/editText_lastTime"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="En Geç"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editText_firstTime"
        app:layout_constraintTop_toTopOf="@+id/editText_firstTime" />

    <EditText
        android:id="@+id/editText_pointExplanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Konum Adı Giriniz"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/editText_firstTime"
        app:layout_constraintTop_toBottomOf="@+id/editText_firstTime" />

    <Button
        android:id="@+id/button_setPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:background="@color/colorButton"
        android:text="Kaydet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>